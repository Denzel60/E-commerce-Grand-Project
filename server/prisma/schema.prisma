generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                    String     @id @default(uuid())
  firstName             String
  lastName              String
  phoneNumber           Int        @unique
  email                 String     @unique
  password              String
  additionalPhoneNumber String?
  address               Int?
  region                String?
  city                  String?
  role                  String?
  products              products[]
  orders                orders[]

  @@map("User_table")
}

model products {
  id          String @id @default(uuid())
  Seller      String
  image       String
  name        String
  category    String
  price       Int
  description String
  sellerId    String
  user        user   @relation(fields: [sellerId], references: [id])

  @@map("Products_table")
}

model orders {
  id          String @id @default(uuid())
  image       String
  name        String
  price       Int
  description String
  sellerId    String
  userId      String
  user        user   @relation(fields: [userId], references: [id])

  @@map("Orders_table")
}
